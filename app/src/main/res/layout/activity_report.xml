<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:id="@+id/report"
    android:gravity="center"
    android:background="@android:color/white">

    <TextView
        android:id="@+id/tv_report_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Inventory Report"
        android:textStyle="bold"
        android:textSize="24sp"
        android:textColor="@android:color/black"
        android:paddingBottom="10dp"/>

    <!-- Report Range Options -->
    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="16dp">

        <Button
            android:id="@+id/btnToday"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Today" />

        <Button
            android:id="@+id/btnYesterday"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Yesterday" />

        <Button
            android:id="@+id/btnLast7Days"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Last 7 Days" />

        <Button
            android:id="@+id/btnLast30Days"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Last 30 Days" />

        <Button
            android:id="@+id/btnCurrentMonth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Current Month" />

        <Button
            android:id="@+id/btnPreviousMonth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Previous Month" />

        <Button
            android:id="@+id/btnCurrentYear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Current Year" />

        <Button
            android:id="@+id/btnGrandReport"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Grand Report" />
    </LinearLayout>

    <!-- Date Picker -->

    <!-- Search Button -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:text="From" />

        <EditText
            android:id="@+id/etFromDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:focusable="false"
            android:hint="YYYY-MM-DD"
            android:inputType="none" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:text="To" />

        <EditText
            android:id="@+id/etToDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:hint="YYYY-MM-DD"
            android:inputType="none" />
    </LinearLayout>

    <Button
        android:id="@+id/btnSearch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Search"
        android:layout_marginTop="16dp"
        android:layout_gravity="center_horizontal" />
</LinearLayout>
